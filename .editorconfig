root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
tab_width = 4

[*.{yml,yaml,xml,json,html,rb,js,css,scss}]
indent_style = space
indent_size = 2

[*.{py,sh,hs,c,h,vim,rst,m,go}]
indent_style = space
indent_size = 4
tab_width = 4
max_line_length = 79

[*.{txt,ini,md}]
end_of_line = crlf
trim_trailing_whitespace = false
indent_style = space
indent_size = 4
max_line_length = 79

[Makefile]
indent_style = tab
indent_size = 8
